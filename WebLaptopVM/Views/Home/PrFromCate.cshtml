            <h2>Sản phẩm hãng @Session["Cate"]</h2>
            <div class="product-list row row-cols-1 row-cols-lg-3 row-cols-md-3">
                @foreach (var item in Model)
                {
                    <div class="product-item">
                        <div class="product-item-inner card">
                            <a href="product-details.html">
                                @{
                                    string ImagePath = "~/Images/Product/" + item.Image;
                                }
                                <img src="@Url.Content(ImagePath)" width="300" class="img-thumbnail" />
