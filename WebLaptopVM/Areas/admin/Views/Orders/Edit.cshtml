@model WebLaptopVM.Models.Order

@{
    ViewBag.Title = "Edit";
}

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5>
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Chỉnh sửa trạng thái đơn hàng</h3></div>
                                <div class="card-body">
                                    @using (Html.BeginForm("Edit", "Orders", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-horizontal">
                                            <hr />
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            @Html.HiddenFor(model => model.Id)
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Stutus, "Trạng thái đơn hàng", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    
                                                    <div class="col-md-10">
                                                        @Html.DropDownList("Stutus", null, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.Stutus, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            <div>
                                                <br />
                                            </div>
                                            <div class="form-group">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Save" class="btn btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

