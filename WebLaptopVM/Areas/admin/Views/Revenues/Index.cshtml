
@{
    ViewBag.Title = "Index";
}
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5>
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Thống kê doanh thu</h3></div>
                                <div class="card-body">

                                    @using (Html.BeginForm("Revenue", "Revenues", FormMethod.Post))
                                    {
                                        <div class=" = viewbag">
                                            @ViewBag.errLogin
                                        </div>
                                        <div>
                                            <br />
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputStart" name="d1" type="date" placeholder="Start time" />
                                            <label for="inputStart">Start time</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="inputEnd" name="d2" type="date" placeholder="End time" />
                                            <label for="inputEnd">End time</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary">Revenue</button>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
