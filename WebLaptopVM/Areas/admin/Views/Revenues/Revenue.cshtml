@model IEnumerable<WebLaptopVM.Models.Order>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5>
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Thống kê doanh thu</h3></div>
                                <div class="card-body">

                                    <table class="table">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Product1.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Quantity)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Time_order)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Profit)
                                            </th>
                                            <th></th>
                                        </tr>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Product1.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Quantity)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Time_order)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Profit)
                                                </td>
                                            </tr>
                                        }
                                        <tr>
                                            <th>
                                                Tổng lợi nhuận:
                                            </th>
                                            <td>
                                                @Session["profit"]
                                            </td>
                                        </tr>

                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>
